#!/usr/bin/env node

var args = process.argv.slice(2),
  command = args[0] ? args.shift().toLowerCase() : '';

switch (command){
  case '-v':
  case '--version':
  case 'ver':
  case 'version':
    var version = require('../package.json').version;
    console.log(version);
    break;

  default:
    require('../lib/console')(command, args);
    break;
}