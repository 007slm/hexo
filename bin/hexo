#!/usr/bin/env node

var lib = require('../lib/cli'),
  args = process.argv.slice(2),
  command = args.shift();

switch (command){
  case '-v':
  case 'version':
    var version = require('../package.json').version;
    console.log(version);
    break;

  case 'server':
    lib.server();
    break;

  case 'deploy':
    lib.deploy();
    break;

  case 'init':
    lib.init(args);
    break;

  case 'generate':
    lib.generate();
    break;

  case 'new_post':
    lib.new.post(args);
    break;

  case 'new_page':
    lib.new.page(args);
    break;

  default:
    lib.help();
    break;
}